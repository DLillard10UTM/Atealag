<Window x:Class="Atealag.MakeItEasy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atealag"
        mc:Ignorable="d"
        Title="MakeItEasy" Height="450" Width="400">
    <Grid>
        <ComboBox x:Name="RaceSelector" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Height="20" SelectionChanged="RaceSelector_SelectionChanged">
            
        </ComboBox>
        
        <ComboBox x:Name="ClassSelector" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="170" Height="20">
            
        </ComboBox>
        
        <ComboBox x:Name="SubraceSelector" HorizontalAlignment="Left" Margin="212,10,0,0" VerticalAlignment="Top" Width="170" Height="20">
            
        </ComboBox>

        <ComboBox x:Name="SubclassSelector" HorizontalAlignment="Left" Margin="212,35,0,0" VerticalAlignment="Top" Width="170" Height="20">
            
        </ComboBox>
        
    </Grid>
</Window>
