                            <Border BorderBrush="Gray" BorderThickness="3" HorizontalAlignment="Left" Height="63" VerticalAlignment="Top" Width="75" Margin="6,0,0,0"/>
                            <TextBlock x:Name="textBlock9" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Init Bonus:" VerticalAlignment="Top" Margin="10,5,0,0" Width="37"/>
                            <TextBlock x:Name="textBlock10" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding totalInit}" VerticalAlignment="Top" Height="27" Width="29" Margin="52,10,0,0"/>
                        </Grid>

                        <Grid Name="DeathSavesGrid" HorizontalAlignment="Left" Height="81" Margin="329,189,0,0" VerticalAlignment="Top" Width="90">
