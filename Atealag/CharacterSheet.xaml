                            <TextBlock x:Name="textBlock8_Copy3" HorizontalAlignment="Left" Margin="3,90,0,0" TextWrapping="Wrap" Text="Misc Dex:" VerticalAlignment="Top"/>
                            <TextBlock x:Name="textBlock7_Copy4" HorizontalAlignment="Left" Margin="3,18,0,0" TextWrapping="Wrap" Text="Base Str:" VerticalAlignment="Top"/>
                            <TextBlock x:Name="textBlock8_Copy4" HorizontalAlignment="Left" Margin="3,39,0,0" TextWrapping="Wrap" Text="Misc Str:" VerticalAlignment="Top"/>
