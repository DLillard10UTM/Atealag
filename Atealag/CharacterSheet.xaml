                        </Grid>
                        <Grid Name="SavingThrowsGrid" HorizontalAlignment="Left" Height="165" Margin="204,108,0,0" VerticalAlignment="Top" Width="120">
                            <Button x:Name="OpenSavingThrowsCalc" Content="SavingThrowsCalc" HorizontalAlignment="Left" Margin="0,136,0,0" Click ="OpenSavingThrowsCalc_Click" VerticalAlignment="Top" Width="120" Height="29"/>
                            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Str:" VerticalAlignment="Top"/>
