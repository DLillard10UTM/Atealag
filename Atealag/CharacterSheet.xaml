                            <TextBox x:Name="MWISTextBox" HorizontalAlignment="Left" Height="23" Margin="153,83,0,0" TextWrapping="Wrap" Text="{Binding wisMisc, Mode=TwoWay}" VerticalAlignment="Top" Width="27"/>
