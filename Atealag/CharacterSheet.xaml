                            <TextBlock x:Name="text" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Proficiency Bonus:" VerticalAlignment="Bottom" Margin="26,0,46,28" Width="70"/>
                            <TextBlock x:Name="ProficientBonus" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding proficientBonus}" VerticalAlignment="Center" Margin="96,22,28,28" Width="18"/>
                        </Grid>
                    </Grid>
               <!-- </TabItem>
