                            <TextBlock x:Name="strDis" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" Text="{Binding savingThrowTotals[0]}" VerticalAlignment="Top"/>
                            <TextBlock x:Name="intelDis" HorizontalAlignment="Left" Margin="50,31,0,0" TextWrapping="Wrap" Text="{Binding savingThrowTotals[1]}" VerticalAlignment="Top"/>
                            <TextBlock x:Name="dexDis" HorizontalAlignment="Left" Margin="50,52,0,0" TextWrapping="Wrap" Text="{Binding savingThrowTotals[2]}" VerticalAlignment="Top"/>
