                            </Grid.RowDefinitions>
                            <Border BorderBrush="Gray" BorderThickness="3" HorizontalAlignment="Left" Height="63" VerticalAlignment="Top" Width="75" Margin="6,0,0,0" Grid.RowSpan="2"/>
                            <TextBlock x:Name="death" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Death Saves" VerticalAlignment="Center" Margin="11,10,9,1.533" Width="70"/>
