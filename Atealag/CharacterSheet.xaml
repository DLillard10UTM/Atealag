                            <TextBlock x:Name="textBlock7_Copy1" HorizontalAlignment="Left" Margin="100,118,0,0" TextWrapping="Wrap" Text="Base Cha:" VerticalAlignment="Top"/>
                            <TextBlock x:Name="textBlock8_Copy1" HorizontalAlignment="Left" Margin="100,139,0,0" TextWrapping="Wrap" Text="Misc Cha:" VerticalAlignment="Top"/>
                            <TextBlock x:Name="textBlock7_Copy2" HorizontalAlignment="Left" Margin="3,118,0,0" TextWrapping="Wrap" Text="Base Con:" VerticalAlignment="Top"/>
